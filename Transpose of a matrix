#include<iostream>
using namespace std;
int main()
{
    int n;
    cout<<"Enter number of rows and columns : ";
    cin>>n;
    int arr[n][n];
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<n;j++)
        {
            cout<<"Enter the element at "<<i<<j<<" position: ";
            cin>>arr[i][j];
        }
    }
    cout<<"Matrix before transpose: \n";
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<n;j++)
        {
            cout<<arr[i][j]<<"\t";
        }
        cout<<endl;
    }
    cout<<"\nMatrix after transpose: \n";
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<n;j++)
        {
            cout<<arr[j][i]<<"\t";
        }
        cout<<endl;
    }
}
