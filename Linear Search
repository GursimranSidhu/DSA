To find largest and smallest element from an array
#include<iostream>
#include<climits>
using namespace std;
int main()
{
    int n;
    cout<<"Enter the number of elements you want in array: ";
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++)
    {
        cout<<"Enter "<<i<<" element of array: ";
        cin>>arr[i];
    }
    int maxNo=INT_MIN;
    int minNo=INT_MAX;
    for(int i=0;i<n;i++)
    {
        maxNo=max(maxNo,arr[i]);
        minNo=min(minNo,arr[i]);
    }
    cout<<"Greatest number in this array is "<<maxNo;
    cout<<"\nSmallest number in this array is "<<minNo;
}

Linear Search
#include<iostream>
using namespace std;
void linearSearch(int arr[],int n,int key)
    {
        for(int i=0;i<n;i++)
        {
            if (arr[i]==key)
            cout<<key <<" is at index "<<i<<endl;
        }
    }
int main()
{
    int n;
    cout<<"Enter the number of elements you want in array: ";
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++)
    {
        cout<<"Enter "<<i<<" element of array: ";
        cin>>arr[i];
    }
    int key;
    cout<<"Enter the element to find the index: ";
    cin>>key;
    linearSearch(arr,n,key);
    return 0;
}
